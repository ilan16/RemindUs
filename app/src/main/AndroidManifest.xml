<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.remindus.projetcommun.remindus" >

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".controller.AfficherAccueil" android:label="Accueil" />
        <activity android:name=".controller.ControllerMsgProg" android:label="Message Programmé" />
        <activity android:name=".controller.AfficherRdv" android:label="RDV" />
        <activity android:name=".controller.ControllerModelMsg" android:label="Modèle Message" />
        <activity android:name=".controller.ControllerContact" android:label="Contact" />
    </application>

</manifest>
